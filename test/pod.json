{
	"apiVersion": "v1",
	"kind": "Pod",
	"metadata": {
		"name": "demo-pod",
		"namespace": "default",
        "lables": {
            "key": "value"
        }
	},
	"spec": {
		"containers": [
			{
				"name": "memory-demo-ctr",
				"image": "polinux/stress",
				"resources": {
					"limits": {
						"memory": "200Mi"
					},
					"requests": {
						"memory": "100Mi"
					}
				},
				"command": [
					"stress"
				],
				"args": [
					"--vm",
					"1",
					"--vm-bytes",
					"150M",
					"--vm-hang",
					"1"
				]
			}
		]
	}
}

