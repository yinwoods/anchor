{{ template "header" }}
<div class="page">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">
            <div>
                <h5 id="title">
                    服务
                </h5>
            </div>
            <div>
                <h6>
                    <i class="fas fa-server"></i>
                    <small>/ 服务</small>
                </h6>
            </div>
        </a>
        <div class="nav-right">
            <div class="inner-addon right-addon">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control" placeholder="搜索" id="search" onkeyup="Search()" />
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12" style="padding: 0;">
                    <div class="card fcard">
                        <div class="card-body">
                            <div align="right">
                                <button type="button" class="badge badge-dark" data-toggle="modal" data-target="#createService">创建新服务</button>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="createService" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <form action="/services" method="POST">
                                            <div class="modal-header">
                                                <h4 class="modal-title" id="myModalLabel">创建新服务</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <label for="exampleFormControlTextarea1">输入服务配置</label>
                                                    <textarea class="form-control" name="body" rows="8"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                                                <button type="submit" class="btn btn-primary">确认提交</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal HTML -->
                            <div id="success-result" class="modal fade">
                                <div class="modal-dialog modal-confirm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <h4>成功!</h4> 
                                            <p id="result"></p>
                                            <button class="btn btn-success" data-dismiss="modal"><span>确定</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="danger-result" class="modal fade">
                                <div class="modal-dialog modal-confirm">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <h4>失败!</h4> 
                                            <p id="result"></p>
                                            <button class="btn btn-danger" data-dismiss="modal"><span>确定</span></button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="table-responsive">
                                <table class="table table-hover" id="table">
                                    <thead class="thead">
                                        <tr>
                                            <th style="width: 8%">序号</th>
                                            <th scope="col">服务名</th>
                                            <th scope="col">命名空间</th>
                                            <th style="width: 15%" scope="col">操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{ range $index, $service := . }}
                                            <tr>
                                                <td>{{ $index | inc }}</td>
                                                <td><a href="/services/{{ $service.Namespace }}/{{ $service.Name }}">{{ $service.Name }}</a></td>
                                                <td>{{ $service.Namespace }}</td>
                                                <td>
                                                    <div class="btn-group" role="group" aria-label="Basic example">
                                                        <button type="button" onclick="showServiceConfigModal(this)" class="btn btn-secondary">修改</button>
                                                        <button type="button" onclick="deleteService(this)" class="btn btn-warning">删除</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        {{ end }}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ template "footer" }}
