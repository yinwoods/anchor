{{ template "header" }}
<div class="page">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">
            <div>
                <h5 id="title">
                    镜像
                </h5>
            </div>
            <div>
                <h6>
                    <i class="zmdi zmdi-image"></i>
                    <small>/ 镜像 </small>
                </h6>
            </div>
        </a>
        <div class="nav-right">
            <div class="inner-addon right-addon">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control" placeholder="搜索" id="search" onkeyup="Search()" />
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12" style="padding: 0;">
                    <div class="card fcard">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="table">
                                    <thead class="thead bg-ee">
                                        <tr>
                                            <th style="width: 8%" scope="col">序号</th>
                                            <th style="width: 35%" scope="col">镜像名</th>
                                            <th style="width: 20%" scope="col">标签</th>
                                            <th style="width: 20%" scope="col">大小</th>
                                            <th scope="col">创建时间</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{ range $index, $image := . }}
                                        <tr>
                                            <td>{{ $index | inc }}</td>
                                            <td>{{ $image.Name }}</td>
                                            <td>{{ $image.Tag }}</td>
                                            <td>{{ $image.Size }} MB</td>
                                            <td>{{ $image.CreatedTime }}</td>
                                        </tr>
                                        {{ end }}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ template "footer" }}
