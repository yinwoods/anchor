{{ template "header" }}
<div class="page">
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand">
            <div>
                <h5 id="title">
                    Pods
                </h5>
            </div>
            <div>
                <h6>
                    <i class="fas fa-server"></i>
                    <small>/ Pods</small>
                </h6>
            </div>
        </a>
        <div class="nav-right">
            <div class="inner-addon right-addon">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control" placeholder="搜索" id="search" onkeyup="Search()" />
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-12" style="padding: 0;">
                    <div class="card fcard">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="table">
                                    <thead class="thead">
                                        <tr>
                                            <th style="width: 2%">序号</th>
                                            <th scope="col">Pod 名</th>
                                            <th scope="col">主机IP</th>
                                            <th scope="col">PODIP</th>
                                            <th scope="col">创建时间</th>
                                            <th style="width: 5%" scope="col">阶段</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{ range $index, $pod := . }}
                                        <tr>
                                            <td style="width: 2%">{{ $index | inc }}</td>
                                            <td><a href="/pods/{{ $pod.Namespace }}/{{ $pod.Name }}">{{ $pod.Name }}</a></td>
                                            <td>{{ $pod.HostIP }}</td>
                                            <td>{{ $pod.PodIP }}</td>
                                            <td>{{ $pod.StartTime }}</td>
                                            <td style="width: 5%" >{{ $pod.Phase }}</td>
                                        </tr>
                                        {{ end }}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ template "footer" }}
