{{ template "header" }}
<div class="page">
  <nav class="navbar navbar-light bg-light">
    <a class="navbar-brand">
      <div>
        <h5 id="title">
          容器
        </h5>
      </div>
      <div>
        <h6>
          <i class="fas fa-server"></i>
          <small>/ 容器</small>
        </h6>
      </div>
    </a>
    <div class="nav-right">
      <div class="inner-addon right-addon">
        <i class="fas fa-search"></i>
        <input type="text" class="form-control" placeholder="搜索" id="search" onkeyup="Search()" />
      </div>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-sm-12" style="padding: 0;">
          <div class="card fcard">
            <div class="card-body">

              <div align="right">
                <button type="button" class="badge badge-dark" data-toggle="modal" data-target="#createService">创建新容器</button>
              </div>

              <div class="modal fade" id="createService" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <form action="/containers" method="POST">
                      <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">创建新容器</h4>
                      </div>
                      <div class="modal-body">
                        <div class="form-group">
                          <label for="exampleFormControlTextarea1">输入容器配置</label>
                          <textarea class="form-control" name="container" rows="6"></textarea>
                        </div>
                        <div class="form-group">
                          <label for="exampleFormControlTextarea1">输入主机配置<span style="color: red"> [*可选]</span></label>
                          <textarea class="form-control" name="host" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                          <label for="exampleFormControlTextarea1">输入网络配置<span style="color: red"> [*可选]</span></label>
                          <textarea class="form-control" name="network" rows="3"></textarea>
                        </div>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">确认提交</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>

              <!-- Modal HTML -->
              <div id="modal-success" class="modal fade">
                <div class="modal-dialog modal-confirm">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body text-center">
                      <h4>成功!</h4> 
                      <p id="success-result"></p>
                      <button class="btn btn-success" data-dismiss="modal"><span>确定</span></button>
                    </div>
                  </div>
                </div>
              </div>

              <div class="table-responsive">
                <table class="table table-hover" id="table">
                  <thead class="thead">
                    <tr>
                      <th style="width: 8%" scope="col">序号</th>
                      <th style="width: 25%" scope="col">容器ID</th>
                      <th style="width: 30%" scope="col">容器名</th>
                      <th style="width: 15%" scope="col">创建时间</th>
                      <th scope="col">状态</th>
                      <th style="width: 15%" scope="col">操作</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{ range $index, $container := . }}
                      <tr>
                        <td>{{ $index | inc }}</td>
                        <td><a href="/containers/{{ .ID }}">{{ .ID }}</td>
                        <td>{{ .Name }}</td>
                        <td>{{ .CreatedTime }}</td>
                        <td>{{ if eq .State "running" }}
                          <span class="fas fa-check text-success center" aria-hidden="true"></span>{{ else }}
                          <span class="fas fa-times text-danger center" aria-hidden="true"></span>{{ end }}
                        </td>
                        <td>
                          <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" id="change" class="btn btn-secondary">修改</button>
                            <button type="button" onclick="deleteContainer(this)" class="btn btn-warning">删除</button>
                          </div>
                        </td>
                      </tr>
                    {{ end }}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ template "footer" }}
